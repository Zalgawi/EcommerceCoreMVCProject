@model IEnumerable<CoreMVCEcommerce.Models.Product>


<div class="row pb-3 backgroundWhite">

    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-md-6" >
            <div class="row p-2">
                <div class="col-12  p-1" style="border:1px solid #1987ba; border-radius: 5px;">
                    <div class="card" style="border:0px;">
                        <div class="pl-1">
                            <p class="card-title h5"><b style="color:#2c3e50">@product.Name</b></p>
                            <label >@Html.Raw(product.Description)</label>
                        </div>
                    </div>
                    <div >
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@product.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
     }
    </div>

@section Scripts{

    <script src="~/js/product.js"></script>
}